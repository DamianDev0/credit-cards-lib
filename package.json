{
  "name": "credit-card-ui-react",
  "version": "0.2.0",
  "type": "module",
  "description": "A beautiful, animated credit card component for React",
  "author": "DamianDev0",
  "license": "MIT",
  "keywords": [
    "react",
    "credit-card",
    "payment",
    "form",
    "ui",
    "component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DamianDev0/credit-cards-lib.git"
  },
  "homepage": "https://github.com/DamianDev0/credit-cards-lib#readme",
  "bugs": {
    "url": "https://github.com/DamianDev0/credit-cards-lib/issues"
  },
  "main": "./dist/credit-card-ui.umd.cjs",
  "module": "./dist/credit-card-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/credit-card-ui.js",
      "require": "./dist/credit-card-ui.umd.cjs"
    },
    "./styles.css": "./dist/credit-card-ui.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "vite build --mode lib && tsc --project tsconfig.lib.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@paper-design/shaders-react": "^0.0.71",
    "clsx": "^2.1.1",
    "credit-card-type": "^10.1.2",
    "framer-motion": "^11.18.2",
    "tailwind-merge": "^3.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.0"
  }
}
